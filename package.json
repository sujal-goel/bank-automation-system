{
  "name": "banking-process-automation",
  "version": "1.0.0",
  "description": "Banking Process Automation System",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "setup:dev": "powershell -ExecutionPolicy Bypass -File scripts/setup-dev.ps1",
    "setup:dev:bash": "bash scripts/setup-dev.sh",
    "setup:quick": "powershell -ExecutionPolicy Bypass -File scripts/start-dev.ps1",
    "deploy:dev": "powershell -ExecutionPolicy Bypass -File scripts/deploy.ps1 development",
    "deploy:staging": "powershell -ExecutionPolicy Bypass -File scripts/deploy.ps1 staging",
    "deploy:prod": "powershell -ExecutionPolicy Bypass -File scripts/deploy.ps1 production",
    "docker:build": "docker build -t banking-process-automation .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "k8s:deploy": "kubectl apply -f k8s/",
    "k8s:delete": "kubectl delete -f k8s/",
    "config:validate": "node -e \"require('./src/config').validate(); console.log('Configuration is valid')\"",
    "health:check": "powershell -Command \"try { Invoke-RestMethod -Uri http://localhost:3000/health -Method Get } catch { exit 1 }\"",
    "test:system": "powershell -ExecutionPolicy Bypass -File test-system.ps1",
    "start:dev": "powershell -Command \"Write-Host 'Starting Banking System Development Server...' -ForegroundColor Green; npm run dev\"",
    "start:prod": "powershell -Command \"Write-Host 'Starting Banking System Production Server...' -ForegroundColor Green; npm start\"",
    "logs": "powershell -Command \"Get-Content logs\\*.log -Tail 50 -Wait 2>$null || Write-Host 'No log files found' -ForegroundColor Yellow\"",
    "clean": "powershell -Command \"Remove-Item -Recurse -Force node_modules, logs\\* -ErrorAction SilentlyContinue; Write-Host 'Cleaned node_modules and logs' -ForegroundColor Green\""
  },
  "keywords": [
    "banking",
    "automation",
    "microservices"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.4"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "fast-check": "^3.15.0",
    "helmet": "^8.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.3",
    "multer": "^2.0.2",
    "node-fetch": "^2.7.0",
    "nodemailer": "^7.0.11",
    "pdf-parse": "^2.4.5",
    "pg": "^8.16.3",
    "tesseract.js": "^7.0.0",
    "uuid": "^9.0.1"
  }
}
