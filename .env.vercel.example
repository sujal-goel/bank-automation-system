# Vercel + Supabase Environment Variables
# Copy this file to .env.local for local development
# Set these variables in Vercel dashboard for production

# Node Environment
NODE_ENV=production

# Server Configuration
PORT=3000
HOST=0.0.0.0

# Supabase Database Configuration
# Get these values from your Supabase project settings > Database
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres
SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
SUPABASE_ANON_KEY=[YOUR-ANON-KEY]
SUPABASE_SERVICE_ROLE_KEY=[YOUR-SERVICE-ROLE-KEY]

# Alternative individual database settings (if not using DATABASE_URL)
DB_HOST=db.[YOUR-PROJECT-REF].supabase.co
DB_PORT=5432
DB_NAME=postgres
DB_USERNAME=postgres
DB_PASSWORD=[YOUR-PASSWORD]
DB_SSL=true
DB_POOL_SIZE=1
DB_SCHEMA=public

# Security Configuration
JWT_SECRET=[GENERATE-A-STRONG-SECRET-KEY]
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# CORS Configuration
CORS_ORIGINS=https://your-frontend-domain.vercel.app,https://your-custom-domain.com

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
AUDIT_LOGGING=true

# Monitoring
HEALTH_CHECK_INTERVAL=30000
METRICS_ENABLED=true

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=Banking System <your-email@gmail.com>

# External Services (Optional)
# Add your external service API keys here
GOOGLE_TRANSLATE_API_KEY=[YOUR-API-KEY]
AWS_ACCESS_KEY_ID=[YOUR-ACCESS-KEY]
AWS_SECRET_ACCESS_KEY=[YOUR-SECRET-KEY]
AWS_REGION=us-east-1

# Feature Flags
FEATURES_ACCOUNT_OPENING=true
FEATURES_LOAN_PROCESSING=true
FEATURES_KYC_VERIFICATION=true
FEATURES_AUDIT_LOGGING=true

# Development/Debug (set to false in production)
DEBUG=false
VERBOSE_LOGGING=false